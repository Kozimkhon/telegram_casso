{
  "name": "telegram_casso",
  "version": "1.0.0",
  "description": "Telegram UserBot + AdminBot system for channel management and message forwarding",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "node --test test/*.test.js",
    "db:init": "node src/db/init.js",
    "add-session": "node scripts/addSession.js",
    "list-sessions": "node scripts/listSessions.js",
    "migrate:typeorm": "node scripts/migrate-to-typeorm.js",
    "typeorm:quickstart": "node typeorm-quick-start.js",
    "typeorm:integration": "node integration-example.js",
    "build": "mkdir -p dist && cp -r src/* dist/",
    "start:prod": "NODE_ENV=production node src/index.js"
  },
  "keywords": [
    "telegram",
    "bot",
    "userbot",
    "channel",
    "forwarding",
    "telegram",
    "telegraf"
  ],
  "author": "Developer",
  "license": "MIT",
  "dependencies": {
    "big-integer": "^1.6.52",
    "dotenv": "^17.2.3",
    "input": "^1.0.1",
    "inquirer": "^12.11.1",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "telegraf": "^4.15.6",
    "telegram": "^2.26.22",
    "typeorm": "^0.3.27",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/node": "^24.10.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "directories": {
    "test": "test"
  }
}
