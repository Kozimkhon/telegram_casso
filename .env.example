# Telegram Bot Configuration
# Copy this file to .env and fill in your actual values

# Telegram API credentials (get from https://my.telegram.org/apps)
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# User account phone number for UserBot (international format with +)
PHONE_NUMBER=+1234567890

# Admin Bot Token (get from @BotFather)
ADMIN_BOT_TOKEN=your_bot_token_here

# Admin User ID (your Telegram user ID)
ADMIN_USER_ID=123456789

# Database path
DB_PATH=./data/telegram_casso.db

# Session file path for UserBot
SESSION_PATH=./data/userbot_session

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Data directory
DATA_DIR=./data